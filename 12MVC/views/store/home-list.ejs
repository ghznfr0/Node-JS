<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
      <h2 class="text-3xl text-green-600 font-bold text-center mb-6">
        Here are our Registered Homes:
      </h2>
      <ul class="flex items-center">
        <% registeredHomes.forEach(home => { %>
          <li class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition duration-300">
            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover rounded-t-lg">
            <div class="p-4">
              <img src="<%= home.photoUrl %>" alt="">
              <h3 class="text-xl font-bold text-gray-800"><%= home.houseName %></h3>
              <p class="text-gray-600">Price: $<%= home.price %></p>
              <p class="text-gray-600">Location: <%= home.location %></p>
              <p class="text-yellow-500">Rating: <%= home.rating %> / 5</p>
              <button class="bg-green-500">Book</button>
            </div>
          </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>