<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
      <h2 class="text-3xl text-green-600 font-bold text-center mb-6">
        Hey Host! Here Are Your Homes:
      </h2>
      <ul class="flex flex-wrap gap-6 justify-center">
        <% registeredHomes.forEach(home => { %>
          <li class="bg-white w-full md:w-80 p-6 rounded-lg shadow-md hover:shadow-lg transition duration-300">
            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover rounded-t-lg mb-4">
            <div class="flex flex-col space-y-2">
              <h3 class="text-xl font-bold text-gray-800"><%= home.houseName %></h3>
              <p class="text-gray-600">Price: $<%= home.price %></p>
              <p class="text-gray-600">Location: <%= home.location %></p>
              <p class="text-yellow-500 font-medium">Rating: <%= home.rating %> / 5</p>
              <div class="flex space-x-4">
                <button class="bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition duration-200">
                  Edit
                </button>
                <button class="bg-red-500 text-white py-2 px-4 rounded-lg hover:bg-red-600 transition duration-200">
                  Delete
                </button>
              </div>
            </div>
          </li>
        <% }) %>
      </ul>
    </main>
    
  </body>
</html>